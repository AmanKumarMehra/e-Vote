<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/cardNews"
    android:layout_width="match_parent"
    android:layout_height="320dp"
    android:layout_margin="8dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/txtPartyName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="273dp"
            android:textAlignment="center"
            android:text="@string/party_name"

            android:textSize="10sp"
            android:gravity="center_horizontal"
            android:layout_marginLeft="0dp"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/txtCandidateName"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"

            android:layout_marginLeft="2dp"
            android:layout_marginTop="223dp"
            android:layout_marginRight="-2dp"
            android:text="@string/candidate_name"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColorHint="#282C2C"
            android:textSize="20sp"
            android:gravity="center_horizontal"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="-2dp" />


        <ImageView
        android:id="@+id/imgCandidate"
        android:layout_width="match_parent"
        android:layout_height="198dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="0dp"
        android:src="@mipmap/ic_launcher"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true" />

        <ImageView
            android:id="@+id/imgPartySymbol"
            android:layout_width="72dp"
            android:layout_height="54dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="319dp"
            android:layout_marginLeft="319dp"
            android:layout_marginTop="260dp"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:src="@mipmap/ic_launcher" />

        <Button
            android:id="@+id/btnCastVote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="27dp"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="260dp"
            android:layout_marginEnd="274dp"
            android:layout_marginRight="274dp"
            android:layout_marginBottom="12dp"
            android:text="Vote"
            android:textColor="@color/white"/>


    </RelativeLayout>


</androidx.cardview.widget.CardView>